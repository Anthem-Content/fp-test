---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import IconBoxes from "../components/IconBoxes.astro";
import ChecklistSplit from "../components/ChecklistSplit.astro";
import TestimonialScroller from "../components/TestimonialScoller.astro";
import SimpleBoxes from "../components/SimpleBoxes.astro";
import FullCta from "../components/FullCta.astro";
import FeatureIcons from "../components/FeatureIcons.astro";
import MediaSplit from "../components/MediaSplit.astro";
import { Image } from "astro:assets";

import heroImage from "../assets/images/home/hero.jpg";
import whyImage from "../assets/images/home/why-firm-page.jpg";
import ctaImage from "../assets/images/home/firm-page-cta.jpg";

const items = [
  {
    title: "Sign up",
    description: "Tell us about your business and audience, and we'll handle the rest.",
    icon: "fa-circle-1",
  },
  {
    title: "Launch Fast",
    description: "Go live with a new professional website in under 30 days.",
    icon: "fa-circle-2",
  },
  {
    title: "Stay Updated",
    description: "We manage all maintenance, updates, and content changes for you.",
    icon: "fa-circle-3",
  },
  {
    title: "Always Fresh",
    description: "Get a full website refresh every 36 months to keep things current.",
    icon: "fa-circle-4",
  },
];

const checklistItems = [
  {
    title: "No upfront cost",
  },
  {
    title: "Unimited Website Updates",
  },
  {
    title: "Includes Hosting & CMS",
  },
  {
    title: "Unlimited Support",
  },
  {
    title: "Recurring Website Refreshes",
  },
  {
    title: "One flat monthly fee",
  },
];

const featureItems = [
  {
    title: "Professional Service Themes",
    description:
      "Premium themes designed specifically for professional service businesses.",
    icon: "fa-paint-brush",
  },
  {
    title: "Complete Website Build",
    description: "Full-service website development from start to finish.",
    icon: "fa-layer-group",
  },
  {
    title: "AI Copy Assistant",
    description: "Smart content creation tools to help with your website copy.",
    icon: "fa-robot",
  },
  {
    title: "Unlimited Pages",
    description: "No restrictions on the number of pages for your website.",
    icon: "fa-copy",
  },
  {
    title: "Updates On Demand",
    description:
      "Request changes whenever you need them with quick turnaround.",
    icon: "fa-arrows-rotate",
  },
  {
    title: "On Page SEO",
    description: "Built-in search engine optimization for better visibility.",
    icon: "fa-magnifying-glass-chart",
  },
  {
    title: "Website Hosting",
    description: "Reliable hosting included with your subscription.",
    icon: "fa-server",
  },
  {
    title: "SSL Certificate",
    description: "Secure your site with included SSL encryption.",
    icon: "fa-shield-check",
  },
  {
    title: "Mobile First Design",
    description: "Responsive websites that look great on all devices.",
    icon: "fa-mobile-screen",
  },
  {
    title: "100% Managed Maintenance",
    description: "We handle all updates, backups, and security patches.",
    icon: "fa-gears",
  },
  {
    title: "Rockstar Support",
    description: "Dedicated support team ready to assist whenever needed.",
    icon: "fa-headset",
  },
  {
    title: "Periodic Refreshes",
    description: "Regular website updates to keep your online presence fresh.",
    icon: "fa-arrow-rotate-right",
  },
];
---

<Layout>
  <div>
    <Hero
      title="Fully Managed Websites, [Zero Nonsense.]"
      description="Say goodbye to big upfront costs, tech headaches, update fees, vendor management, and outdated websites—forever."
      image={heroImage}
    />
  </div>
  <section class="section">
    <div class="has-background-light">
      <div>
        <IconBoxes
          title="Easy Mode For Your Firm's Website"
          subtitle="Fully managed professional service websites"
          button={true}
          buttonText="See Examples"
          buttonLink="/examples/"
          items={items}
        />
      </div>
      <div>
        <MediaSplit
          title="Why Firm Page?"
          subtitle="the last website you'll ever need"
          description={`You need a fully-managed solution built for professional service firms—one that reflects your quality, supports your brand, and frees your team to focus on client work.

No big upfront costs. No delays or surprise fees for updates.

Just a high-performing website you can count on, with refreshes every 36 months to keep your presence sharp.

All for one flat monthly fee.`}
          imageSrc={whyImage}
          imageAlt="Why choose Firm Page"
          mediaOnRight={false}
          showButton={true}
          buttonText="Get Started Today"
          buttonUrl="/contact"
        />
        
      </div>
    </div>
  </section>
  <section class="section">
    <div class="container">
      <div>
        <FeatureIcons
          title="Everything, That's What's Included"
          subtitle="Hassle-Free, By Design"
          description="Everything your firm needs, wrapped into one simple monthly fee. We take care of your site, so you can take care of your business."
          showDescriptionOnHover={true}
          items={featureItems}
        />
      </div>
    </div>
  </section>
  <TestimonialScroller />

  <div>
    <FullCta
      title="Put Your Firm's Website On Easy Mode"
      image={ctaImage}
      link="/contact"
      buttonText="Get a Demo"
    />
  </div>
</Layout>
